                                class="w-16 h-16 mx-auto mb-4"  
                                fill="none"  
                                stroke="currentColor"  
                                stroke-width="2"  
                                stroke-linecap="round"  
                                stroke-linejoin="round"  
                                viewBox="0 0 24 24"                                
